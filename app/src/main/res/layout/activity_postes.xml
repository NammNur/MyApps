<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postes">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Perhitungan Gaji"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/TNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Masukan Nama Anda"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="16dp" />

        <CheckBox
            android:id="@+id/CStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menikah"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golongan"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/RgGol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/R1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golongan 1" />

            <RadioButton
                android:id="@+id/R2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golongan 2"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <Button
            android:id="@+id/BtnHitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HASIL"
            android:backgroundTint="@drawable/bg2"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/BtnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HAPUS"
            android:backgroundTint="@color/black"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Dari Perhitungan"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/THasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
